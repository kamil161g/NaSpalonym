{% extends 'base.html.twig' %}


{% block body %}

    <nav class="navbar navbar-inverse">


        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.plainSeason, {'attr': {'class': 'form-control', 'style': 'width: 50%'}}) }}
        {{ form_row(form.submit,{'attr': {'class': 'btn btn-success', 'style': 'width: 10%'}}) }}
        {{ form_end(form) }}

        <a href="{{ path('app_edit_details_team', {'team': id}) }}" class="btn btn-default">Edytuj</a>
    {% if result is defined %}
        <img src="{{ asset('uploads/herbs/'~herb.brochure) }}"class="img-circle" width="140" height="140">

        <h4>Nazwa: {{ result.name }}</h4>
            <h4>Dywizja: {{ result.division }}</h4>
            <h4>Klasa: {{ result.league }}</h4>




        <nav class="navbar navbar-inverse">
            <h4>Skład drużyny:</h4>
                <h4>
                    <h4>Bramkarze:</h4>
                        {% for sq in squad %}
                            {% if (sq.position == 'Bramkarz') %}
                                <li><a  style="text-decoration: none; color: white;" href="{{ path('app_details_fb',{'footballer': sq.footballer.id}) }}">{{ sq.footballer.name }} {{ sq.footballer.surname }}</a> </li>
                            {% endif %}
                        {% endfor %}
                    <h4>Obrońcy:</h4>
                        {% for sq in squad %}
                            {% if (sq.position == 'Obrońca') %}
                                <li><a  style="text-decoration: none; color: white;" href="{{ path('app_details_fb',{'footballer': sq.footballer.id}) }}">{{ sq.footballer.name }} {{ sq.footballer.surname }}</a> </li>
                            {% endif %}
                        {% endfor %}
                    <h4>Pomocnicy:</h4>
                        {% for sq in squad %}
                            {% if (sq.position == 'Pomocnik') %}
                                <li><a  style="text-decoration: none; color: white;" href="{{ path('app_details_fb',{'footballer': sq.footballer.id}) }}">{{ sq.footballer.name }} {{ sq.footballer.surname }}</a> </li>
                            {% endif %}
                        {% endfor %}
                    <h4>Napastnicy:</h4>
                        {% for sq in squad %}
                            {% if (sq.position == 'Napastnik') %}
                                <li><a  style="text-decoration: none; color: white;" href="{{ path('app_details_fb',{'footballer': sq.footballer.id}) }}">{{ sq.footballer.name }} {{ sq.footballer.surname }}</a> </li>
                            {% endif %}
                        {% endfor %}

                </h4>
        </nav>
    </nav>
        {% endif %}

{% endblock %}