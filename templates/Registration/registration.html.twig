{% extends 'base.html.twig' %}


{% block body %}
    <script src='https://www.google.com/recaptcha/api.js'></script>

    <div class="panel-body" >
        {% for message in app.flashes("success") %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes("error") %}
            <div class="alert alert-danger" role="alert">{{ message }}</div>
        {% endfor %}

        {#<div class="panel-group"> <h2>ZAŁÓŻ KONTO JUŻ TERAZ :></h2></div>#}
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.name, {'attr': {'class': 'form-control', 'style': 'width: 30%'}}) }}
        {{ form_row(form.surname, {'attr': {'class': 'form-control', 'style': 'width: 30%'}}) }}
        {{ form_row(form.email, {'attr': {'class': 'form-control', 'style': 'width: 30%'}}) }}
        {{ form_row(form.password.first, {'attr': {'class': 'form-control', 'style': 'width: 30%'}}) }}
        {{ form_row(form.password.second, {'attr': {'class': 'form-control', 'style': 'width: 30%'}}) }}
        </br>
    <div class="checkbox">
        <label>
            <h4>Akceptuj regulamin:</h4>
        {{ form_row(form.termsAccepted) }}
        </label>
    </div>
        <div class="g-recaptcha" data-sitekey="6Le_1FgUAAAAAFHXTrGBKkDRfoJ_4TQa5b9fwTgX"></div>
        {{ form_row(form.submit,{'attr': {'class': 'btn btn-success'}}) }}

        {{ form_end(form) }}

    </div>



{% endblock %}