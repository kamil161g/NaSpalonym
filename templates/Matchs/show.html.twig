{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <br/>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.division, {'attr': {'class': 'form-control', 'style': 'width: 50%'}}) }}
    {{ form_row(form.league, {'attr': {'class': 'form-control', 'style': 'width: 50%'}}) }}

    </br>
    {{ form_row(form.submit,{'attr': {'class': 'btn btn-success', 'style': 'width: 10%'}}) }}


    {{ form_end(form) }}

    <div class="page-header">
        <h1>NadchodzÄ…ce mecze: <small></small></h1>

    </div>
    {% if matchs is defined %}
        <div class="container" style="background-color: #122b40">
            {% for matchs in matchs %}
            <h3>
                {{ matchs.hostTeam }}
                Vs
                {{ matchs.guestTeam }}

                Data: {{ matchs.startMatch|date("Y-m-d H:i:s") }}

            </h3>
        </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}